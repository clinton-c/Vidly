@model Vidly.Models.Customer

@{
    ViewBag.Title = "Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var newsletterSubscriberIndicator = Model.IsSubscribedToNewsLetter ? "Yes" : "No";
}

<h2>@Model.Name</h2>
<ul>
    @if (Model.Birthdate.HasValue)
    {
        <li><strong>Birthday: </strong> @Model.Birthdate.GetValueOrDefault().ToShortDateString()</li>
    }
    <li><strong>Membership Type:</strong> @Model.MembershipType.Name</li>
    <li> <strong>Newsletter Subscriber: </strong> @newsletterSubscriberIndicator</li>
</ul>


